{
  "name": "ai-memory-task-mcp",
  "version": "1.0.0",
  "description": "MCP server for persistent AI memory and task management across conversations",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev-embeddings": "tsx src/index-with-embeddings.ts",
    "start": "node dist/index.js",
    "dev-http": "tsx src/http-server.ts",
    "start-http": "node dist/http-server.js",
    "build-http": "npm run build && echo 'HTTP server built successfully'",
    "docker:build": "docker build -t ai-memory-mcp -f docker/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ai-memory-mcp",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:restart": "docker-compose -f docker/docker-compose.yml restart ai-memory-server",
    "test": "jest",
    "test-validation": "tsx src/test-validation.ts",
    "dev-validation": "tsx src/index-with-validation.ts",
    "start-validation": "node dist/index-with-validation.js",
    "build-validation": "npm run build && echo 'Validation server built successfully'",
    "validate-and-run": "npm run build && npm run start-validation"
  },
  "keywords": [
    "mcp",
    "ai",
    "memory",
    "context",
    "persistence",
    "task-management",
    "todo",
    "productivity"
  ],
  "author": "Mike Earley",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@prisma/client": "^6.16.2",
    "@xenova/transformers": "^2.17.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "prisma": "^6.16.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
